<!DOCTYPE html>
<html>
<head>
    <title>{{title}}</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="/assets/css/button.css">
    <link rel="stylesheet" href="/assets/css/cardbutton.css">
    <link rel="stylesheet" href="/assets/css/greenbutton.css">
    <link rel="stylesheet" href="/assets/css/buttonhead.css">
    <link rel="stylesheet" href="/assets/css/center align.css">
    <link rel="stylesheet" href="/assets/css/servicebutton.css">
</head>
<body>

<!-- Navbar (sit on top) -->
<div class="w3-top">
  <div class="w3-bar w3-white w3-wide w3-padding w3-card">
    <a href="#home" class="w3-button btn">Stay Safe</a>
    <div class="w3-right w3-hide-small">
      <a href="#projects" class="w3-button btn">Services</a>
      <a href="#about" class="w3-button btn">About</a>
      <a href="#contact" class="w3-button btn">Contact</a>
    </div>
  </div>
</div>


<!-- Header -->
<header class="w3-display-container w3-content w3-wide" style="max-width:1500px;" id="home">
  <img class="w3-image" src="/assets/img/heroimg169pexels-cottonbro-4098368.jpg" alt="Safe" width="1500" height="800">
  <div class="w3-display-middle w3-margin-top w3-center">
     <h1 class="w3-xxlarge w3-text-black"><span class="w3-padding"><b>Welcome, {{naming}}!</b></span></h1>
    <h1 class="w3-xxlarge w3-text-black"><span class="w3-padding"><b>Stay Safe</b></span></h1>
  </div>
</header>

<!-- Page content -->
<div class="w3-content w3-padding" style="max-width:1564px">

  <!-- Services Section -->
  <div class="w3-container w3-padding-32" id="projects">
    <h3 class="w3-border-bottom w3-border-light-grey w3-padding-16">Services</h3>
  </div>

  <div class="w3-row-padding">
    {{#each services}}
    <div class="w3-col l3 m6 w3-margin-bottom">
      <div class="w3-display-container">
        <div class="container1 centered"><button class="button2">{{this.name}}</button></div>
        <img src="{{this.image}}" style="width:100%">
      </div>
    </div>
    {{/each}}
  </div>

  <!-- About Section -->
  <div class="w3-container w3-padding-32" id="about">
    <h3 class="w3-border-bottom w3-border-light-grey w3-padding-16">About</h3>
    <p>{{aboutText}}</p>
  </div>

  <div class="w3-row-padding">
    {{#each therapists}}
    <div class="w3-col l3 m6 w3-margin-bottom">
      <img src="{{this.image}}" alt="{{this.name}}" style="width:100%">
      <h3>{{this.name}}</h3>
      <p class="w3-opacity">{{this.specialization}}</p>
      <p>{{this.description}}</p>
<a href="/book/{{this.id}}" style="text-decoration: none;"> <!-- Remove underline -->
    <button class="w3-button custom-button w3-black w3-center w3-block">
        Book an Appointment
    </button>
</a>
    </div>
    {{/each}}
  </div>

  <!-- Contact Section -->
  <div class="w3-container w3-padding-32" id="contact">
    <h3 class="w3-border-bottom w3-border-light-grey w3-padding-16">Contact</h3>
    <p>Let us know how we can help you!!</p>
    <form action="/action_page" method="POST">
      <input class="w3-input w3-border" type="text" placeholder="Name" required name="Name">
      <input class="w3-input w3-section w3-border" type="text" placeholder="Email" required name="Email">
      <input class="w3-input w3-section w3-border" type="text" placeholder="Subject" required name="Subject">
      <input class="w3-input w3-section w3-border" type="text" placeholder="Comment" required name="Comment">
      <button type="submit" class="w3-button w3-black w3-margin-top">Send Message</button>
    </form>
  </div>

  {{!-- <!-- Image of location/map -->
  <div class="container1">
    <h3 style="font-family:'Cambria" class="centered">{{communityText}}</h3>
    <br><br><button class="button"><span class="button-content">Join Now</span></button>
    <img src="/assets/img/lastimgcopy.jpg" class="w3-image" style="width:100%">
  </div> --}}

<!-- End page content -->
</div>

<!-- Footer -->
<br><br><br>
</body>
</html>
